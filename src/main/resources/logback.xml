<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{10}) - %cyan(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="ch.qos.logback" level="WARN" additivity="false"/>
    <logger name="com.jcabi.manifests" level="WARN" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>